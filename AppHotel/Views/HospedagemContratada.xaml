<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             Background="{StaticResource Gray900}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="10">
        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="{StaticResource Primary}"
               FontFamily="Lexend-Regular"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10">
            <StackLayout Spacing="5" Orientation="Horizontal">
                <!-- Adultos -->
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Adultos: " TextColor="{StaticResource Primary}" FontFamily="Lexend-Bold"/>
                    <Label Text="{Binding QntAdultos}" Margin="4,0,0,0"/>
                </HorizontalStackLayout>

                <!-- Crianças -->
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Crianças: " TextColor="{StaticResource Primary}" FontFamily="Lexend-Bold"/>
                    <Label Text="{Binding QntCriancas}" Margin="4,0,0,0"/>
                </HorizontalStackLayout>
            </StackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in" TextColor="{StaticResource Primary}" FontFamily="Lexend-Bold" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out" TextColor="{StaticResource Primary}" FontFamily="Lexend-Bold" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia" TextColor="{StaticResource Primary}" FontFamily="Lexend-Bold" HorizontalTextAlignment="Center"/>

                <Label Grid.Row="1" Grid.Column="0" Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}" HorizontalTextAlignment="Center"/>
                <Label Grid.Row="1" Grid.Column="2" Text="{Binding Estadia}" HorizontalTextAlignment="Center"/>
            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                <Label Text="Valor Total: " TextColor="{StaticResource Primary}" FontFamily="Lexend-Bold"/>
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}" Margin="4,0,0,0"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"
                Margin="5"
                TextColor="White" FontFamily="Lexend-Regular"/>
    </VerticalStackLayout>
</ContentPage>